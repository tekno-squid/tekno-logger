# Development Environment Template
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=3000

# Database Configuration (Update for your MySQL setup)
DB_HOST=your-mysql-host.com
DB_NAME=your_database_name
DB_USER=your_username
DB_PASS=your_password
DB_POOL_MIN=2
DB_POOL_MAX=10

# Security (Generate secure random values for production)
HMAC_SECRET=generate-a-secure-random-string-at-least-32-characters
ADMIN_TOKEN=generate-a-secure-admin-token

# System Configuration
DEFAULT_RETENTION_DAYS=30
MAX_PAYLOAD_BYTES=524288
MAX_EVENTS_PER_POST=250

# Rate Limiting
RATE_LIMIT_PER_MINUTE=5000
RATE_LIMIT_PER_IP=100